{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2018",
        "jsx": "preserve",
        "removeComments": false,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": false,
        "experimentalDecorators": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "noErrorTruncation": true,
        "allowJs": true,
        "declaration": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@control-ui/kit": [
                "control-kit/src"
            ],
            "@control-ui/kit/*": [
                "control-kit/src/*"
            ],
            "@control-ui/docs": [
                "control-docs/src"
            ],
            "@control-ui/docs/*": [
                "control-docs/src/*"
            ],
            "@control-ui/app": [
                "control-app/src"
            ],
            "@control-ui/app/*": [
                "control-app/src/*"
            ],
            "@control-ui/routes": [
                "control-routes/src"
            ],
            "@control-ui/routes/*": [
                "control-routes/src/*"
            ],
            "@control-ui/md-mui": [
                "control-md-mui/src"
            ],
            "@control-ui/md-mui/*": [
                "control-md-mui/src/*"
            ],
        }
    },
//    "include": [
//        "**/*"
//    ],
    "exclude": [
        "**/build/",
        "**/*.d.ts"
    ]
}
